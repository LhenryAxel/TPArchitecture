<Window x:Class="HMI.CoursesScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMI"
        mc:Ignorable="d"
        Title="CoursesScreen" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="coursesList" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button Content="Delete" HorizontalAlignment="Left" Margin="116,291,0,0" VerticalAlignment="Top" Click="RemoveCourse" />
        <Button Content="Add" HorizontalAlignment="Left" Margin="279,291,0,0" VerticalAlignment="Top" Click="Add" />
        <Button Content="Modify" HorizontalAlignment="Left" Margin="423,291,0,0" VerticalAlignment="Top" Click="ModifyCourse"/>
    </Grid>
</Window>
